<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Alyona_PostEAV::styles/blog.css"/>
        <title>Blog</title>
    </head>
    <body>
        <referenceContainer name="logo" remove="true" />
        <referenceContainer name="header.container">
            <referenceBlock name="top.search" remove="true"/>
            <referenceBlock name="minicart" remove="true"/>
        </referenceContainer>
        <referenceBlock name="sidebar.main" remove="true"/>
        <referenceBlock name="sidebar.additional" remove="true"/>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" xsi:type="string">Blog</argument>
            </action>
        </referenceBlock>
        <!--                   class="Magento\Framework\View\Element\Template"-->
        <referenceBlock name="content">
            <block name="alyona_blog_blog"
                    class = "Magento\Framework\View\Element\Template"
                   template="Alyona_PostEAV::blog.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Alyona\PostEAV\ViewModel\Post</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceBlock name="content">
            <block class="Alyona\PostEAV\Block\Pager"
                   name="alyona_blog_pager"
                   template="Alyona_PostEAV::pagination.phtml"
                   cacheable="false"
            />
        </referenceBlock>
    </body>
</page>
