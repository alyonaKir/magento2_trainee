<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Alyona_Blog::styles/blog.css"></css>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" xsi:type="string">Blog</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="content">
            <block name="alyona_blog_blog"
                   class="Magento\Framework\View\Element\Template"
                   template="Alyona_Blog::blog.phtml">
                <arguments>
                    <argument name="viewModel" xsi:type="object">Alyona\Blog\ViewModel\Blog</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
